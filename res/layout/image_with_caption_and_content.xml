            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="台北市"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

